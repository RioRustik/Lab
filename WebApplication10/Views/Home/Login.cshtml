
@model WebApplication10.Models.Admin
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Оформление заказа</title>
</head>
<body>
    <div>
        <p>@ViewBag.result</p>
        <div class="wrap">
            
            @using (Html.BeginForm())
            {
                @Html.ValidationSummary()
                <p>Логин: @Html.TextBoxFor(x => x.UserName)</p>
                <p>Пароль: @Html.TextBoxFor(x => x.Password)</p>


                <input type="submit" value="Войти" />
            }
        </div>
        <style>
            .wrap, p {
                display: flex;
                align-items: center;
                justify-content: center;
            }
        </style>
    </div>
</body>
</html>

