@model IEnumerable<WebApplication10.Models.Item>
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Книжный магазин</title>
    <link rel="stylesheet" href="~/Content/index.css" />
</head>
<body>
    <div>
        <div class="cart">@Html.ActionLink("Администрирование", "Login") @Html.ActionLink("Корзина покупок", "Cart")</div>
        <p class="done">@ViewBag.Done</p>
        <p class="error">@ViewBag.Quantity</p>
        <p>@ViewBag.Test</p>
        <h1>Книжный магазин</h1>
        <div class="wrap">
            @foreach (WebApplication10.Models.Item i in Model)
            {
                <div class="item">
                    <div style="background-image: url(@Url.Content(@i.Picture)); background-size:contain; width: 190px; height: 280px;"></div>
                    <h3>@i.Title</h3>
                    <p>@i.Description</p>
                    <b>@i.Price ₽</b>
                    <p>Осталось на складе: @i.Quantity</p>
                    @using (Html.BeginForm())
                    {
                        <label>Введите количество:</label>
                        <input name="quantity" value="1" />
                        <input type="hidden" name="id" value="@i.Id" />
                        <input type="hidden" name="quant" value="@i.Quantity" />
                        <input type="submit" value="Добавить в корзину" />
                    }
                </div>
            }           
        </div>
        
    </div>
</body>
</html>
