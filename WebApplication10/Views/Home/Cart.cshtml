@model List<WebApplication10.Models.Detail>

@{
    Layout = null;
}

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Корзина</title>
</head>

<body>
    <h2>Корзина</h2>
    <div class="wrap">
        @if (Model.Count == 0)
        {
            <p>Ваша корзина пуста</p>
        }
        else
        {
            <table>
                <tr>
                    <td><p>Название товара</p></td>
                    <td><p>Количество</p></td>
                    <td><p>Стоимость товара</p></td>
                    <td><p>Общая стоимость</p></td>
                    <td></td>
                </tr>
                @foreach (WebApplication10.Models.Detail d in Model)
                {
                <tr>
                    <td><p>@d.Title</p></td>
                    <td><p>@d.Price</p></td>
                    <td><p>@d.Quantity</p></td>
                    <td><p>@(Convert.ToInt32(d.Price) * Convert.ToInt32(d.Quantity))</p></td>
                    <td>
                        @using (Html.BeginForm())
                        {
                            <input type="hidden" name="id" value="@d.Id" />
                            <input type="submit" value="Удалить" />
                        }
                    </td>
                </tr>
                }
            </table>
            @Html.ActionLink("Оформить заказ", "Order")
        }


    </div>
    <style>
        td {
            padding: 10px 15px;
            border: 1px solid #eee;
        }

        p {
            font-size: 20px;
        }
        h2, .wrap{
            width: 1200px;
            margin: 0 auto;
        }
    </style>
</body>
</html>
